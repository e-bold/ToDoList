@model List<one2Do.ViewModels.ToDoListViewModel>

@{
    ViewData["Title"] = "To-Do Lists";
}

<h2>@ViewData["Title"]</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New List</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                List Title
            </th>
            <th>
                Tasks
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)







        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    <ul>
                        @foreach (var task in item.TaskItems)







                        {
                            <li>
                                <form asp-action="ToggleComplete" asp-controller="TaskItem" method="post">
                                    <input type="hidden" name="id" value="@task.Id" />
                                    <input type="checkbox" name="IsCompleted" @(task.IsCompleted ? "checked" : "")
                                        onchange="this.form.submit()" />
                                    @if (task.IsCompleted)







                                    {
                                        <s>@task.Description</s>
                                    }







                                    else







                                    {
                                        @task.Description
                                    }
                                </form>
                            </li>
                        }
                    </ul>
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
